.a-row
  .row
    .small-12.columns
      %h1.a-row--headline Neuer Spieltag

= form_for @matchday do |f|
  = f.hidden_field :date, value: Date.today
  .a-row.as-grey
    .row
      .small-12.medium-4.medium-offset-2.columns
        %h2.a-row--headline Heimteam
        = f.select :home_team_id, options_for_select(@teams.map{ |team| [team.name, team.id] }), include_blank: 'Team wählen'
      .small-12.medium-4.columns
        %h2.a-row--headline Gastteam
        = f.select :guest_team_id, options_for_select(@teams.map{ |team| [team.name, team.id] }), include_blank: 'Team wählen'
      %button Spiel starten
